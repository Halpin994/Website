@model IEnumerable<MvcWebsite.Models.CommentModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ContactMe</title>
</head>
<body>
    <div>
        <h3>Contact Me</h3>
        <p>
            <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
            <script type="IN/MemberProfile" data-id="https://www.linkedin.com/in/halpinconor" data-format="click" data-related="false" data-text="Conor Halpin"></script>
        </p>
        <p>Email: conorhalpin@outlook.com</p>
    </div>

    <fieldset>
        <legend>Comments</legend>
        <fieldset>
                @Html.ActionLink("Submit a comment", "CreateComment", "Comment", new { fromView = "ContactMe", fromController = "Contact" }, null)
        </fieldset>
        @foreach (var item in Model)
        {
            if (item.Webpage == "ContactMe")
            {
                <fieldset>
                    <b>@item.UserName: </b>@item.Comment
                </fieldset>
            }
        }
    </fieldset>

</body>
</html>
